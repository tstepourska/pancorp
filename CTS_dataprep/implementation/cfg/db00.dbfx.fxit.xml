<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE domain-properties SYSTEM "environment.dtd">

<!-- DB environment file. -->
<domain-properties>

 <!-- Default -->
 <domain name="default"
         description="Named after the domain you wish to configure">
   <context name="ca">
     <context name="gc">
       <context name="cra">
         <context name="db">
           <context name="fxmt">
             <property name="environment" value="U"
                       description="Database environment"/>
             <property name="database" value="#1"
                       description="Database id"/>
             <property name="pool" value="ca.gc.cra.fxit.ca2us.jdbc.fxmtDataSource"
                       description="Database connection pool name"/>
             <property name="prettyname" value="Pretty Name"
                       description="database pretty name"/>
             <property name="log-to-screen" value="false"
                        description="true or false (default) to log to the screen in addition of the log file (reserve this for development)"/>
             <property name="should-log" value="true"
                       description="Set to true if you wish to log the SQL"/>
             <property name="log-file-name" value="fxitdatabase.log"
                       description="File to log to for sql and data access"/>
             <property name="log-level" value="1"
                       description="Debug, Info,..."/>
           </context>
         </context>
       </context>
     </context>
   </context>
 </domain>
 <!-- end of Default-->
