<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.mapper.action.prefix.enabled" value="true" />
    
    <constant name="struts.devMode" value="true" />
    <constant name="struts.custom.i18n.resources" value="ca.gc.cra.fxit.ctsagent.resources.strings" />
    <constant name="struts.i18n.encoding" value="UTF-8" />   
    
 <!--   <constant name="struts.convention.action.fileProtocols" value="jar,zip" />
	<constant name="struts.convention.action.includeJars" value=".*_wl_cls_gen.*" />
-->

    <package name="default" namespace="/" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>

    	<interceptors>
            <interceptor name="noCacheSetter" class="ca.gc.cra.fxit.ctsagent.web.interceptors.NoCacheSetter" />    	
            <interceptor name="authentication" class="ca.gc.cra.fxit.ctsagent.web.interceptors.LoginInterceptor" />
    	
			<interceptor-stack name="appDefaultStack">
			    <interceptor-ref name="noCacheSetter"/>    
	    		<interceptor-ref name="defaultStack">
	     			<param name="exception.logEnabled">true</param>
	     			<param name="exception.logLevel">ERROR</param>
	     			<param name="i18n.attributeName">org.apache.tiles.LOCALE</param>
	    		</interceptor-ref>	    		
	    	</interceptor-stack>
	    	
	    	<interceptor-stack name="authenticationStack">
					<interceptor-ref name="authentication" />
					<interceptor-ref name="appDefaultStack" />
			</interceptor-stack>
			
			
    	</interceptors>
    	
		<default-interceptor-ref name="appDefaultStack" />

        <default-action-ref name="index" />
        <action name="index">
            <result>/pub/index.jsp</result>
        </action>
    </package>


    <package name="pub" namespace="/pub" extends="default">   
    	 <action name="login">
			<interceptor-ref name="authenticationStack" />
			<result name="success" type="tiles">.clf.login</result>
			<result name="error" type="tiles">.clf.login</result>
		</action>     
        <action name="rfrsh" class="ca.gc.cra.fxit.ctsagent.web.actions.RefreshSessionAction">
            <result type="stream">
                <param name="contentType">text/plain</param>
                <param name="inputName">responseStream</param>
            </result>         
        </action>
    </package>
        
    
    <package name="prot" namespace="/prot" extends="default">       
    	<action name="logout" class="ca.gc.cra.fxit.ctsagent.web.actions.LogoutAction">
			<result name="success" type="tiles">.clf.login</result>
			<result name="error" type="tiles">.clf.login</result>
		</action>  
		 <action name= "j_security_check" class="ca.gc.cra.fxit.ctsagent.web.actions.LoginAction" >
            <result name="success" type="tiles">.clf.ntr</result>
            <result name="error"  type="tiles">.clf.login</result>
            <result name="input"  type="tiles">.clf.login</result>
        </action>
        <action name="ntr" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="prompt" >
            <result name="success" type="tiles">.clf.ntr</result>
        </action>
        <action name="ntrSbmt" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="retrieve" >
            <result name="input" type="tiles">.clf.ntr</result>
            <result name="success" type="tiles">.clf.vw</result>
            <result name="error" type="tiles">.clf.ntr</result>
        </action>
        <action name="dlt" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="retrieve" >
            <result name="success" type="tiles">.clf.dlt</result>
        </action>
        <action name="dltSbmt" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="delete" >
            <result name="success" type="tiles">.clf.vw</result>
            <result name="list" type="chain">lst</result>
        </action>
        <action name="mdfy" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="retrieve" >
            <result name="success" type="tiles">.clf.mdfy</result>
        </action>
        <action name="crt" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="prompt" >
            <result name="success" type="tiles">.clf.crt</result>
        </action>
        <action name="crtSbmt" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="add" >
            <result name="success" type="chain">ntrSbmt</result>
            <result name="input" type="tiles">.clf.crt</result>
            <result name="list" type="chain">lst</result>
        </action>
        <action name="mdfySbmt" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="modify" >
            <result name="success" type="chain">ntrSbmt</result>
            <result name="input" type="tiles">.clf.mdfy</result>
            <result name="list" type="chain">lst</result>
        </action>
        <action name="cncl" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoAction" method="cancel" >
            <result name="vw" type="tiles">.clf.vw</result>
            <result name="ntr" type="chain">.clf.ntr</result>
        </action>
        <action name="lst" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoListAction" method="retrieveAll" >
            <result name="success" type="tiles">.clf.lst</result>
        </action>
        <action name="nxt" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoListAction" method="next" >
            <result name="success" type="tiles">.clf.lst</result>
        </action>
        <action name="prv" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoListAction" method="previous" >
            <result name="success" type="tiles">.clf.lst</result>
        </action>
        <action name="pg" class="ca.gc.cra.fxit.ctsagent.web.actions.PackageInfoListAction" method="retrievePage" >
            <result name="success" type="tiles">.clf.lst</result>
        </action>
        <action name="lngg" class="ca.gc.cra.fxit.ctsagent.web.actions.LanguageAction" >
            <result name="tiles" type="tiles">${#session.crrntPg}</result>
            <result name="chain" type="chain">${#session.crrntPg}</result>
            <result name="default" type="chain">ntr</result>
        </action>
    </package>
    
</struts>
